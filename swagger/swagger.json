{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Contribuições de Locais",
    "version": "1.0.0",
    "description": "API para gerenciar contribuições e locais acessíveis."
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Servidor local"
    }
  ],
  "paths": {
    "/contribuicoes": {
      "post": {
        "summary": "Submete uma nova contribuição de local acessível",
        "tags": ["Contribuições"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Contribuicao"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Contribuição submetida com sucesso!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "id": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Erro: Dados da contribuição incompletos ou inválidos.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro no servidor.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/contribuicoes/pendentes": {
      "get": {
        "summary": "Retorna todas as contribuições pendentes de revisão",
        "tags": ["Contribuições"],
        "responses": {
          "200": {
            "description": "Lista de contribuições pendentes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "contribuicoes": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Contribuicao"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Nenhuma contribuição pendente encontrada.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro no servidor.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/contribuicoes/aprovar/{id}": {
      "put": {
        "summary": "Aprova uma contribuição de local acessível",
        "tags": ["Contribuições"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "O ID da contribuição a ser aprovada"
          }
        ],
        "responses": {
          "200": {
            "description": "Contribuição aprovada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Contribuição não encontrada.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro ao aprovar a contribuição.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/contribuicoes/rejeitar/{id}": {
      "put": {
        "summary": "Rejeita uma contribuição de local acessível",
        "tags": ["Contribuições"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "O ID da contribuição a ser rejeitada"
          }
        ],
        "responses": {
          "200": {
            "description": "Contribuição rejeitada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Contribuição não encontrada.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro ao rejeitar a contribuição.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/locais": {
      "post": {
        "summary": "Adiciona um novo local",
        "tags": ["Locais"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Local"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Local adicionado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "id": {
                      "type": "string"
                    },
                    "local": {
                      "$ref": "#/components/schemas/Local"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Erro: Dados do local incompletos ou inválidos.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro no servidor.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Retorna todos os locais",
        "tags": ["Locais"],
        "responses": {
          "200": {
            "description": "Lista de locais",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "locais": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Local"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Nenhum local encontrado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro no servidor.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/locais/{id}": {
      "put": {
        "summary": "Atualiza um local existente",
        "tags": ["Locais"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "O ID do local a ser atualizado"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Local"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Local atualizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "local": {
                      "$ref": "#/components/schemas/Local"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Local não encontrado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro no servidor.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Remove um local existente",
        "tags": ["Locais"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "O ID do local a ser removido"
          }
        ],
        "responses": {
          "200": {
            "description": "Local removido com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "id": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Local não encontrado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro no servidor.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Contribuicao": {
        "type": "object",
        "required": ["name", "address", "features", "rating"],
        "properties": {
          "name": {
            "type": "string",
            "description": "O nome do local acessível"
          },
          "address": {
            "type": "string",
            "description": "O endereço do local"
          },
          "features": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "As características de acessibilidade do local"
          },
          "rating": {
            "type": "number",
            "description": "A avaliação do local"
          }
        }
      },
      "Local": {
        "type": "object",
        "required": ["name", "address", "features", "rating"],
        "properties": {
          "name": {
            "type": "string",
            "description": "O nome do local"
          },
          "address": {
            "type": "string",
            "description": "O endereço do local"
          },
          "features": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "As características de acessibilidade do local"
          },
          "rating": {
            "type": "number",
            "description": "A avaliação do local"
          }
        }
      }
    }
  }
}
